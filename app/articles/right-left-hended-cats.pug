block vars
	- var title = "Ученые обнаружили среди кошек правшей и левшей"
	- var description = "Правши и левши есть не только среди людей, но и среди кошек. К такому выводу пришли ученые из Королевского университета в Белфасте (Великобритания)"
	- var keywords = "Среди кошек есть правши и левши"

	- var pageId = 4
